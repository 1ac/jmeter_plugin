<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
        default-autowire="constructor"
        >
    <!-- declare all beans you like Spring Dependency Injection to create -->
    <!-- see http://static.springsource.org/spring/docs/3.0.x/spring-framework-reference/html/beans.html -->

    <bean id="jmeterRunType" class="jmeter_runner.server.JMeterRunType"/>
    <bean id="jmeterProblemType" class="jmeter_runner.server.JMeterPerformanceProblemTypeProvider"/>

    <!--jmeter performance monitoring-->
    <bean id="jmeterPerfMonStateController" class="jmeter_runner.server.build_perfmon.JMeterStateController"/>
    <bean id="jMeterPerfMonTab" class="jmeter_runner.server.build_perfmon.JMeterPerfMonTab">
        <constructor-arg index="0" ref="webControllerManager"/>
        <constructor-arg index="1" ref="buildServer"/>
    </bean>

    <!--jmeter average statistic by builds-->
    <bean id="jmeterStatisticsProvider" class="jmeter_runner.server.build_statistics.JMeterValueProvider">
        <constructor-arg index="0" ref="BuildDataStorage"/>
        <constructor-arg index="1" ref="valueProviderRegistry"/>
        <constructor-arg index="2" ref="buildServer"/>
    </bean>
    <bean id="jmeterStatisticTab" class="jmeter_runner.server.build_statistics.JMeterStatisticsTab" init-method="register">
        <constructor-arg index="0" ref="webControllerManager"/>
        <constructor-arg index="1" ref="projectManager"/>
        <constructor-arg index="2" ref="valueProviderRegistry"/>
        <constructor-arg index="3" ref="jmeterStatisticsProvider"/>
    </bean>

</beans>
