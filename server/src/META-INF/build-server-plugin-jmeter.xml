<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
        default-autowire="constructor"
        >
    <!-- declare all beans you like Spring Dependency Injection to create -->
    <!-- see http://static.springsource.org/spring/docs/3.0.x/spring-framework-reference/html/beans.html -->

    <bean id="jmeterRunType" class="jmeter_runner.server.JMeterRunType"/>
    <bean id="jmeterProblemType" class="jmeter_runner.server.JMeterPerformanceProblemTypeProvider"/>

    <bean id="jmeterGraphsState" class="jmeter_runner.server.build_perfmon.state.JMeterStateController"/>


    <bean id="jmeterStatisticGraphs" class="jmeter_runner.server.build_statistics.JMeterStatisticsTab" init-method="register">
        <constructor-arg index="0" ref="webControllerManager"/>
        <constructor-arg index="1" ref="projectManager"/>
        <constructor-arg index="2" ref="valueProviderRegistry"/>
    </bean>

    <bean id="jmeterBuildStatistics" class="jmeter_runner.server.build_statistics.JMeterValueProvider">
        <constructor-arg index="0" ref="BuildDataStorage"/>
        <constructor-arg index="1" ref="valueProviderRegistry"/>
        <constructor-arg index="2" ref="buildServer"/>
        <!-- JMeterPluginConstants.BASE_VALUE_PROVIDER -->
        <constructor-arg index="3" value="JMeterValueProvider"/>
    </bean>


    <bean id="jmeter" class="jmeter_runner.server.build_perfmon.JMeterStatTab" init-method="register">
        <constructor-arg index="0" ref="webControllerManager"/>
        <constructor-arg index="1" ref="buildServer"/>
    </bean>
</beans>
